<%= form_for @move, :html => { :class => "form-horizontal move" } do |f| %>

    <% if @move.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@move.errors.count, "error") %> prohibited this move from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @move.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :game_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :game_id, :class => 'form-control' %>
    </div>
    <% #error_span(@move[:game_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number, :class => 'form-control' %>
    </div>
    <% #error_span(@move[:number]) %>
  </div>
  <div class="control-group">
    <%= f.label :move, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :move, :class => 'form-control' %>
    </div>
    <% #error_span(@move[:move]) %>
  </div>
  <div class="control-group">
    <%= f.label :white, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :white, :class => 'form-control' %>
    </div>
    <% #error_span(@move[:white]) %>
  </div>
  <div class="control-group">
    <%= f.label :from, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :from, :class => 'form-control' %>
    </div>
    <% #error_span(@move[:from]) %>
  </div>
  <div class="control-group">
    <%= f.label :to, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :to, :class => 'form-control' %>
    </div>
    <% #error_span(@move[:to]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            moves_path, :class => 'btn btn-default' %>

<% end %>
