<p id="notice"><%= notice %></p>

<h1>Openings</h1>

<% @openings.each do |name, group| %>
  <table class="table table-striped table-sm table-responsive">
    <thead>
      <tr>
        <th><%= name %></th>
        <th>Games</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% group.each do |opening| %>
        <tr>
          <td><%= opening.variation %> - <%= l(opening.updated_at) %> - (<%= opening.ecocode %>)</td>
          <td><%= link_to opening.games_count, opening_games_path(opening) %></td>
          <td><%= link_to 'Delete', opening_path(opening), method: :delete, data: { confirm: "Delete #{opening.name} #{opening.variation}(#{opening.ecocode})?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
