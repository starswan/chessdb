<p id="notice"><%= notice %></p>

<h1><%= @players.count %> Players</h1>

<table class="nice-table-layout">
  <thead>
    <tr>
      <th align="center">Name</th>
      <th>Games</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %>&nbsp;<%= player.last_name %></td>
        <td align="right"><%= link_to "#{player.white_games_count}/#{player.black_games_count}", player_games_path(player) %></td>
        <td><%= link_to 'Show', player, class: 'show-button' %></td>
        <td><%= link_to 'Edit', edit_player_path(player), class: 'edit-button' %></td>
        <td><%= link_to 'Destroy', player, method: :delete, class: 'delete-button', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>